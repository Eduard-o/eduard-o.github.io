---
import { navPages } from '../data/nav';
---

<div class="navbar bg-base-100 pt-4 sticky top-0 z-50 opacity-[0.925]">
  <div class="flex-1">
    <a
      class="bg-clip-text text-3xl py-3 mr-40 font-extrabold text-transparent bg-gradient-to-r from-base-content to-warning-content rounded-md md:text-2x1 hover:from-base-content hover:to-base-content"
      href="/">Eduard-o</a
    >
  </div>
  <div class="flex-none">
    <ul class="menu menu-horizontal px-1">
      {
        navPages.map(({ href, label }: { href: string; label: string }) => (
          <li>
            <a href={href} class="active:bg-base-content/30 active:text-current hover:bg-base-content/20 hover:text-current p-3 rounded-md">
              {label}
            </a>
          </li>
        ))
      }
      <li class="tooltip tooltip-warning tooltip-bottom" data-tip="GitHub">
        <a
          href="https://github.com/eduard-o"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub Profile"
          class="active:bg-base-content/30 active:text-current hover:bg-base-content/20 hover:text-current p-3 rounded-md"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-brand-github"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
            ></path>
          </svg>
        </a>
      </li>
    </ul>
  </div>
</div>
