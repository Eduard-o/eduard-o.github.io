---
import { navPages } from '../data/nav';
import { socialLinks } from '../data/socials';
import Social from './Social.astro';
---

<div class="navbar bg-base-100 pt-4 sticky top-0 z-50 opacity-[0.925]">
  <div class="flex-1">
    <a
      class="bg-clip-text text-3xl py-3 mr-40 font-extrabold text-transparent bg-gradient-to-r from-base-content to-warning-content rounded-md md:text-2x1 hover:from-base-content hover:to-base-content"
      href="/">Eduard-o</a
    >
  </div>
  <div class="flex-none">
    <ul class="menu menu-horizontal px-1">
      {
        navPages.map(({ href, label }: { href: string; label: string }) => (
          <li>
            <a href={href} class="active:bg-base-content/30 active:text-current hover:bg-base-content/20 hover:text-current p-3 rounded-md">
              {label}
            </a>
          </li>
        ))
      }
      {
        socialLinks.map(({ data_tip, href, aria_label }: { data_tip: string; href: string; aria_label: string }) => (
          <Social data_tip={data_tip} href={href} aria_label={aria_label} />
        ))
      }
    </ul>
  </div>
</div>
